
.swiperview{
  width: 100%;
  height: 50rpx;
  background: transparent;
  position: absolute;
  left: 0;
  top: 0;
}

.swiper {
  width: 100%;
  height: 50rpx;
}

.swiper-item {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.text {
  font-size: 25rpx;
}

.indicator {
  width: 25rpx;
  background-color: #f00;
  height: 0.5rpx;
}

.scrollview {
  height: 50rpx;
  white-space: nowrap;
  display: flex;
}

/* 设置scroll-view滚动条隐藏 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.item-list {
  width: 30rpx;
  height: auto;
  font-size: 25rpx;
  margin-right: 20rpx;
  display: inline-block;
}
