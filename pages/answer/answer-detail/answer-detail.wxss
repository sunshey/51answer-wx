.top {
  display: flex;
  flex-direction: column;
  /* position: absolute;
  left: 0;
  top: 0; */
}

.answer-title {
  display: flex;
  font-size: 30rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
}

.answer-detail-container {
  display: flex;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 20rpx;
  font-size: 25rpx;
  justify-content: flex-start;
}

.top-page-guide {
  display: flex;
  margin-right: 15rpx;
}

.current-page {
  color: #f14343;
  margin-right: 5rpx;
}

.sum-page {
  margin-left: 5rpx;
}

.divider {
  width: 1rpx;
  background-color: #ccc;
}

.page_guide-item_container {
  display: flex;
  margin-left: 15rpx;
  flex-grow: 1;
}

.page-guide-item {
  display: flex;
  flex-direction: column;
  width: 50rpx;
  font-size: 25rpx;
  /* justify-content: center; */
  text-align: center;
  align-items: center;
}

.indicator {
  background-color: #f14343;
  height: 1rpx;
  width: 25rpx;
}

.middle-divider {
  height: 0.5rpx;
  background-color: #ccc;
}

.swiper {
  display: flex;
  width: 100%;
   height: 880rpx; 
  /* flex-grow: 1; */
   align-items: center; 
  justify-content: center;
}

.image {
  width: 100%;
  height: 100%;
}

.bottom-contanier {
  display: flex;
  height: 80rpx;
  /* position: absolute;
  left: 0;
  bottom: 0; */
  /* margin-top: 10rpx;
  margin-bottom: 10rpx; */
  width: 100%;
  padding-left: 40rpx;
  padding-right: 40rpx;
  justify-content: center;
  align-items: center;
}

.collect-icon {
  width: 60rpx;
  height: 60rpx;
}

.down-icon {
  width: 34rpx;
  height: 34rpx;
  margin-right: 10rpx;
}

.share-icon {
  width: 36rpx;
  height: 35rpx;
  margin-right: 10rpx;
}

.btn-share {
  display: flex;
  flex-grow: 1;
  align-items: center;
  background-color: #fff;
  font-size: 25rpx;
  border-radius: 0;
}

.btn-share::after {
  border: none;
  border-radius: 0;
}

.btn-hover-class {
  background-color: #eee;
}
