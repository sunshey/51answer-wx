.swiper {
  width: 100%;
  height: 250rpx;
}

.image {
  height: 250rpx;
  width: 100%;
}

.search-container {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f14343;
  height: 100rpx;
  margin: 0, auto;
}

.search {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 90%;
  height: 80%;
  background-color: #fff;
  border-radius: 5rpx;
}

.hover-bg {
  background-color: #ccc;
}

.search-content {
  flex-grow: 1;
  font-size: 32rpx;
  margin-left: 30rpx;
  color: #aaa;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}

.hot-book-container {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.hot-book-items {
  display: flex;
  margin-left: 20rpx;
  width: 100%;
  margin-top: 20rpx;
  align-items: flex-end;
}

.hot-book-item {
  display: flex;
  flex-direction: column;
  margin-right: 120rpx;
  width: 20%
}

.book-cover {
  width: 100%;
  height: 141rpx;
}

.hot-book-name {
  color: #aaa;
  font-size: 25rpx;
  width: 100%;
}

.hot-book-border {
  width: 140rpx;
  height: 185rpx;
  align-self: flex-start;
}

.hot-recommend-items {
  display: flex;
  margin-left: 20rpx;
  margin-top: 20rpx;
  flex-wrap: wrap;
}

.hot-recommend-item {
  display: flex;
  width: 47%;
  height: 70rpx;
  margin-bottom: 20rpx;
  font-size: 25rpx;
  text-align: center;
  margin-right: 20rpx;
  border-radius: 5rpx;
  align-items: center;
  justify-content: center;
}

.bottom-scan {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.bottom-scan-container {
  display: flex;
  width: 400rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  align-self: center;
}

.scan-icon {
  width: 120rpx;
  height: 120rpx;
  align-items: center;
  margin-top: 10rpx;
}

.jiao_icon {
  width: 23rpx;
  height: 12rpx;
}

.scan-text {
  display: flex;
  flex-direction: column;
  background-color: #f14343;
  border-radius: 5rpx;
  width: 100%;
  height: 100rpx;
  font-size: 30rpx;
  color: #fff;
  align-items: center;
  justify-content: center;
}

.scan-qr-icon {
  width: 63rpx;
  height: 34rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
}

.scan-text-content-bottom {
  display: flex;
  justify-content: center;
  margin-top: 5rpx;
}
