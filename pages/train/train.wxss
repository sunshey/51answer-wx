/* pages/train/train.wxss */
@import "../../template/search.wxss";

.container {
  display: flex;
  width: 100%;
}

.query {
  display: flex;
  flex-direction: column;
}

.start_place {
  display: flex;
  font-size: 35rpx;
  flex-direction: row;
  align-items: center;
}

.arrive_place {
  display: flex;
  font-size: 35rpx;
  flex-direction: row;
  margin-top: 20rpx;
  align-items: center;
}

.input-placeholder {
  font-size: 25rpx;
}

.place_container {
  margin-left: 50rpx;
}

.place_input {
  border: lightgrey;
  border-style: solid;
  border-width: 1px;
  height: 60rpx;
  width: 250rpx;
  padding-left: 10rpx;
}

.start_time {
  display: flex;
  flex-direction: row;
  font-size: 35rpx;
  margin-top: 20rpx;
  align-items: center;
}

.time_input {
  border: lightgrey;
  border-style: solid;
  border-width: 1px;
  height: 60rpx;
  width: 200rpx;
}

.time_container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
}

.calander {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

.btn_query {
  margin-top: 20rpx;
  width: 200rpx;
}

.button-hover {
  background-color: #999;
}

.show {
  margin-top: 30rpx;
}

.ticket {
  display: flex;
  align-items: center;
  font-size: 30rpx;
}

.small_ticket {
  font-size: 25rpx;
  margin-left: 10rpx;
}

.time {
  margin-left: 10rpx;
}

.data_item {
  margin-right: 10rpx;
}

.common {
  font-size: 30rpx;
  color: #f00;
  
}

.tip {
  font-size: 25rpx;
  color: #f00;
  margin-left: 15rpx;
}
